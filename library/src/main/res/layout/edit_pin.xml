<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/underline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/pin1"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pin2"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pin3"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pin4"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin3"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pin5"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin4"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pin6"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:hint="-"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pin5"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>